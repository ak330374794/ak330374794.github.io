{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.js",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue",
    "scripts/**/*.js",
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
